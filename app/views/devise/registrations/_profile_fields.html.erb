<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %>
  <%= f.text_area :self_introduction %>
</div>

<div class="field">
  <%= f.label :image %>
  <%= f.file_field :image, accept: 'image/jpg, image/jpeg, image/gif' %>
</div>

<div class="field">
  <%= f.label :image_now %>
  <%= image_tag @user.image.variant(resize: "100x100") if @user.image.present? %>
</div>
