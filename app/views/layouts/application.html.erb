<!DOCTYPE html>
<html>

<head>
  <title>BooksApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <p class="navbar-text pull-right">
    <% if user_signed_in? %>
    <strong><%= current_user.name %></strong><%= t('views.common.logged_in_as') %>
    <%= link_to t('views.common.edit_profile'), edit_user_registration_path, class: 'navbar-link' %> |
    <%= link_to t('views.common.logout'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %>
    <% else %>
    <%= link_to t('views.common.sign_up'), new_user_registration_path, class: 'navbar-link'  %> |
    <%= link_to t('views.common.login'), new_user_session_path, class: 'navbar-link'  %>
    <% end %>
  </p>
  <%= yield %>
</body>

</html>
